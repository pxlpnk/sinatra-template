# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'rack'
gem 'sinatra', '~> 1.3.0'
gem 'sinatra-contrib'

gem 'haml'


group :test do
  gem 'rspec', :require => 'spec'
  gem 'rspec'
  gem 'rack-test'
  gem 'autotest-standalone'
  gem 'autotest-growl'
end


group :development do
  gem 'better_errors'
  gem 'pry'
  gem 'pry-remote'
  gem 'pry-stack_explorer'
  gem 'pry-debugger'
  gem 'tux'
  gem 'awesome_print'
end
